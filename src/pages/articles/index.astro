---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import ArrowCard from "@components/ArrowCard.astro";

const blog = await getCollection("blog");
const archive = await getCollection("archive");

const data = [...blog, ...archive]
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Posts by year
type YearAcc = {
  [year: string]: (CollectionEntry<"blog"> | CollectionEntry<"archive">)[];
}

const postsByYear = data.reduce((acc: YearAcc, post) => {
  const year = post.data.date.getFullYear().toString();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {});

const years = Object.keys(postsByYear).sort((a, b) => parseInt(b) - parseInt(a));

// Posts by tag
type TagAcc = {
  [tag: string]: (CollectionEntry<"blog"> | CollectionEntry<"archive">)[];
}

const postsByTag = data.reduce((acc: TagAcc, post) => {
  const tags = post.data.tags || [];
  tags.forEach(tag => {
    if (!acc[tag]) {
      acc[tag] = [];
    }
    acc[tag].push(post);
  });
  return acc;
}, {});

const tags = Object.keys(postsByTag).sort((a, b) =>
  postsByTag[b][0].data.date.valueOf() - postsByTag[a][0].data.date.valueOf()
);
---

<PageLayout title="Articles" description="All articles">
  <Container>
    <div class="space-y-10">
      <div class="flex gap-4">
        <button
          id="tab-posts"
          class="font-semibold text-black dark:text-white tab-btn"
          data-tab="posts"
        >
          Posts
        </button>
        <button
          id="tab-tags"
          class="font-semibold text-black/40 dark:text-white/40 tab-btn"
          data-tab="tags"
        >
          Tags
        </button>
      </div>

      <div id="content-posts" class="space-y-4">
        {years.map((year, index) => (
          <>
            {year === "2023" && index > 0 && (
              <div class="py-6">
                <hr class="border-black/10 dark:border-white/10" />
              </div>
            )}
            <section class="space-y-4">
              <div class="font-semibold text-black dark:text-white">
                {year}
              </div>
              <div>
                <ul class="flex flex-col mb-8">
                  {
                    postsByYear[year].map((post) => (
                      <li>
                        <ArrowCard entry={post} padding="py-2" arrow={false}/>
                      </li>
                    ))
                  }
                </ul>
              </div>
            </section>
          </>
        ))}
      </div>

      <div id="content-tags" class="space-y-4 hidden">
        {tags.map(tag => (
          <section class="space-y-4">
            <div class="font-semibold text-black dark:text-white">
              {tag.replace(/_/g, " ")}
            </div>
            <div>
              <ul class="flex flex-col mb-8">
                {
                  postsByTag[tag].map((post) => (
                    <li>
                      <ArrowCard entry={post} padding="py-2" arrow={false} showDate/>
                    </li>
                  ))
                }
              </ul>
            </div>
          </section>
        ))}
      </div>
    </div>
  </Container>
</PageLayout>

<script>
  function initTabs() {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const contentPosts = document.getElementById('content-posts');
    const contentTags = document.getElementById('content-tags');

    tabBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const tab = btn.getAttribute('data-tab');

        tabBtns.forEach(b => {
          b.classList.remove('text-black', 'dark:text-white');
          b.classList.add('text-black/40', 'dark:text-white/40');
        });

        btn.classList.remove('text-black/40', 'dark:text-white/40');
        btn.classList.add('text-black', 'dark:text-white');

        if (tab === 'posts') {
          contentPosts?.classList.remove('hidden');
          contentTags?.classList.add('hidden');
        } else {
          contentPosts?.classList.add('hidden');
          contentTags?.classList.remove('hidden');
        }
      });
    });
  }

  initTabs();
  document.addEventListener('astro:after-swap', initTabs);
</script>
